[Unit]
Description=Openstack Neutron Linux Bridge Agent Service
After=network.target remote-fs.target
ConditionPathExists=/etc/neutron/neutron.conf

[Service]
User=neutron
Group=neutron
Type = simple
EnvironmentFile=-/etc/conf.d/neutron
ExecStart=/usr/bin/neutron-linuxbridge-agent --config-file /etc/neutron/neutron.conf --log-file /var/log/neutron/neutron-linuxbridge.log  $NEUTRON_DAEMON_OPTS
PIDFile=/var/run/neutron/neutron-linuxbridge.pid
RuntimeDirectory=neutron

[Install]
WantedBy=multi-user.target
