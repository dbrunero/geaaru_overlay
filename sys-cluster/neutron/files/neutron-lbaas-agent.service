[Unit]
Description=Openstack Neutron LBaaS Agent Service
After=network.target remote-fs.target
ConditionPathExists=/etc/neutron/neutron.conf
ConditionPathExists=/etc/neutron/lbaas_agent.ini

[Service]
User=neutron
Group=neutron
Type = simple
EnvironmentFile=-/etc/conf.d/neutron
ExecStart=/usr/bin/neutron-lbaas-agent --config-file /etc/neutron/neutron.conf --log-file /var/log/neutron/neutron-lbaas.log  $NEUTRON_DAEMON_OPTS
PIDFile=/var/run/neutron/neutron-lbaas.pid
RuntimeDirectory=neutron

[Install]
WantedBy=multi-user.target
